{
  "name": "photon-marketplace",
  "owner": {
    "name": "Portel",
    "email": "arul@luracast.com"
  },
  "metadata": {
    "description": "Official photon MCP servers",
    "version": "1.4.1"
  },
  "plugins": [
    {
      "name": "code-diagram",
      "description": "Code Diagram - Generate Mermaid diagrams from TypeScript/JavaScript code",
      "source": "./",
      "strict": false,
      "hooks": [
        "./.claude-plugin/hooks.json"
      ],
      "mcpServers": {
        "code-diagram": {
          "command": "photon",
          "args": [
            "mcp",
            "code-diagram"
          ]
        }
      }
    },
